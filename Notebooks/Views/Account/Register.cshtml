@model Notebooks.ViewModels.RegisterViewModel
<h2>Register</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-lg-1">
            <label asp-for="Email">Email:</label>
        </div>
        <div class="col-3">
            <input asp-for="Email" class="form-control" type="email" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-1">
            <label asp-for="Name">Name:</label>
        </div>
        <div class="col-3">
            <input asp-for="Name" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-1">
            <label asp-for="Surname">Surname:</label>
        </div>
        <div class="col-3">
            <input asp-for="Surname" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-1">
            <label asp-for="Password">Password:</label>
        </div>
        <div class="col-3">
            <input asp-for="Password" class="form-control" type="password" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-1">
            <label asp-for="PasswordConfirm">Confirm password:</label>
        </div>
        <div class="col-3">
            <input asp-for="PasswordConfirm" class="form-control" type="password" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
        <div class="col-lg-2">
            @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>
    <div>
        <div class="col-lg-2">
            <input type="submit" class="btn badge-info" value="Register" />
        </div>
    </div>
</form>