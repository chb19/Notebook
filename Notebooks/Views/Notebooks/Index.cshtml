@model Notebooks.Models.User
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Notebook List</h2>
    </div>
    @if (User.IsInRole("Contributor") || User.IsInRole("Admin"))
    {
       <div class="col-3 offset-3">
            @if (User.IsInRole("Admin"))
            {
                <div>
                    <a asp-action="UserList" asp-controller="Notebooks" asp-route-id="@Model.Id" class="btn btn-info form-control text-white">
                        My notebooks
                    </a>
                </div>
            }
            else
            {
       <div>
           <a asp-action="Upsert" asp-controller="Notebooks" class="btn btn-info form-control text-white">
               Add New Notebook
           </a>
       </div>
            }
       </div>
    }
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Phone number</th>
                    <th>City</th>
                    <th>Age</th>
                    @if (User.IsInRole("Contributor") || User.IsInRole("Admin"))
                    {
                        <th></th>
                    }
                </tr>
            </thead>
        </table>
    </div>
</div>

@if (User.IsInRole("Contributor") || User.IsInRole("Admin"))
{
    @section Scripts{
        <script src="~/js/contributorsList.js"></script>
    }
}
@if (User.IsInRole("Viewer"))
{
    @section Scripts{
        <script src="~/js/viewersList.js"></script>
    }
}